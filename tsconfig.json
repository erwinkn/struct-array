// Taken from [trpc](https://github.com/trpc/trpc/blob/main/tsconfig.build.json)
{
  "compilerOptions": {
    "module": "esnext",
    "lib": ["es5", "es6", "dom", "dom.iterable"],
    "target": "ESNext",
    "importHelpers": true,
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "moduleResolution": "node",
    "jsx": "react",
    "esModuleInterop": true
  }
}